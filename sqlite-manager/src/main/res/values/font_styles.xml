<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="sqlite_manager_wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sqlite_manager_txt_primary" parent="@style/sqlite_manager_wrapContent">
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/sqlite_manager_txt_primary</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
    </style>

    <style name="sqlite_manager_txt_primary_medium" parent="@style/sqlite_manager_txt_primary">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <style name="sqlite_manager_txt_secondary" parent="@style/sqlite_manager_wrapContent">
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/sqlite_manager_txt_secondary</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
    </style>

    <style name="sqlite_manager_txt_secondary_medium" parent="@style/sqlite_manager_txt_secondary">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <style name="sqlite_manager_txt_disabled" parent="@style/sqlite_manager_wrapContent">
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/sqlite_manager_txt_disabled</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
    </style>

    <style name="sqlite_manager_txt_disabled_medium" parent="@style/sqlite_manager_txt_disabled">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <!-- Primary Colors -->

    <style name="sqlite_manager_mtxt_headline_1" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="sqlite_manager_mtxt_headline" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sqlite_manager_mtxt_title" parent="sqlite_manager_txt_primary_medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sqlite_manager_mtxt_sub_title" parent="sqlite_manager_txt_primary_medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sqlite_manager_mtxt_subheading" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body1_primary" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body2_primary" parent="sqlite_manager_txt_primary_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body3_primary" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body4_primary" parent="sqlite_manager_txt_primary_medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body5_primary" parent="sqlite_manager_txt_primary">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body6_primary" parent="sqlite_manager_txt_primary_medium">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Secondary Colors -->

    <style name="sqlite_manager_mtxt_body1_secondary" parent="sqlite_manager_txt_secondary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body2_secondary" parent="sqlite_manager_txt_secondary_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body3_secondary" parent="sqlite_manager_txt_secondary">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body4_secondary" parent="sqlite_manager_txt_secondary_medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body5_secondary" parent="sqlite_manager_txt_secondary">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="sqlite_manager_mtxt_body6_secondary" parent="sqlite_manager_txt_secondary_medium">
        <item name="android:textSize">10sp</item>
    </style>
</resources>